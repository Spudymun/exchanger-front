{
  "name": "@repo/style-scanner",
  "version": "1.0.0",
  "description": "Automated style documentation generator for React components",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "style-scanner": "./bin/style-scanner.js"
  },
  "scripts": {
    "build": "tsc",
    "build:clean": "tsc --build --clean",
    "build:force": "tsc --build --force",
    "dev": "tsc --watch",
    "lint": "eslint src --max-warnings 0",
    "check-types": "tsc --noEmit",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch --passWithNoTests",
    "dev:cli": "npm run build && node bin/style-scanner.js",
    "test:cli": "npm run build && node bin/style-scanner.js scan --help",
    "scan-styles": "npm run build && cd ../../ && node packages/style-scanner/bin/style-scanner.js scan --out style-docs --verbose"
  },
  "dependencies": {
    "typescript": "^5.0.0",
    "react-docgen-typescript": "^2.2.2",
    "fast-glob": "^3.3.2",
    "postcss": "^8.4.31",
    "postcss-js": "^4.0.1",
    "@babel/parser": "^7.23.0",
    "@babel/traverse": "^7.23.0",
    "@babel/types": "^7.23.0",
    "commander": "^11.1.0",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@types/babel__traverse": "^7.20.4",
    "@types/node": "^20.0.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.0"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "bin",
    "README.md"
  ]
}
