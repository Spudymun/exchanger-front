{
  "extends": ["@repo/eslint-config"],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "overrides": [
    {
      "files": ["bin/**/*.js"],
      "env": {
        "node": true,
        "es2024": true
      },
      "rules": {
        "no-console": "off",
        "complexity": "off",
        "max-depth": "off",
        "@typescript-eslint/no-var-requires": "off"
      }
    }
  ]
}
