# âœ… Environment Variables for Development Docker Setup
# Copy this file to .env for local development

# ===== DATABASE CONFIGURATION =====
# PostgreSQL Settings
POSTGRES_DB=exchanger_dev
POSTGRES_USER=exchanger_user
POSTGRES_PASSWORD=exchanger_password
POSTGRES_PORT=5432

# Database URL for Prisma
DATABASE_URL="postgresql://exchanger_user:exchanger_password@localhost:5432/exchanger_dev?schema=public"

# ===== REDIS CONFIGURATION =====
# Redis Settings
REDIS_PORT=6379
REDIS_URL="redis://localhost:6379"

# Redis Database Allocation
REDIS_SESSION_DB=1
REDIS_CACHE_DB=0
REDIS_RATELIMIT_DB=2

# ===== SESSION MANAGEMENT =====
# Session Environment: mock | development | production
SESSION_ENVIRONMENT=development

# Session Configuration
SESSION_MAX_AGE_SECONDS=86400
SESSION_REDIS_PREFIX="exchanger:session:"
SESSION_REDIS_TTL=86400

# ===== DEVELOPMENT TOOLS =====
# PgAdmin Configuration
PGADMIN_EMAIL=admin@exchanger.local
PGADMIN_PASSWORD=admin123

# Redis Commander Configuration
REDIS_COMMANDER_USER=admin
REDIS_COMMANDER_PASSWORD=admin123

# ===== APPLICATION SETTINGS =====
# Next.js
NODE_ENV=development
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=dev_secret_key_change_in_production

# ===== LOGGING & MONITORING =====
# Log Levels: error | warn | info | debug
LOG_LEVEL=debug

# ===== SECURITY (Development) =====
# JWT Secrets (change in production!)
JWT_SECRET=dev_jwt_secret_change_in_production
JWT_EXPIRES_IN=24h

# CORS Settings
CORS_ORIGIN=http://localhost:3000

# ===== DEVELOPMENT FLAGS =====
# Enable development features
DEV_MODE=true
DEBUG_SESSION=true
DEBUG_SQL=false

# ===== EXTERNAL SERVICES =====
# Email (development - use local/test service)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@exchanger.local

# ===== RATE LIMITING =====
# Rate limit settings for development
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
