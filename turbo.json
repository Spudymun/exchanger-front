{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "envMode": "loose",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": [
        "VERCEL_URL",
        "PORT",
        "NODE_ENV",
        "ANALYZE",
        "DATABASE_URL",
        "REDIS_URL",
        "FORCE_MOCK_MODE",
        "SESSION_ENVIRONMENT",
        "NEXTAUTH_URL",
        "NEXTAUTH_SECRET"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "lint:strict": {
      "dependsOn": ["^lint:strict"]
    },
    "lint:styles": {
      "dependsOn": ["^lint:styles"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "build:clean": {
      "cache": false
    },
    "build:force": {
      "dependsOn": ["^build:force"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "build:rebuild": {
      "dependsOn": ["^build:rebuild"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "build:analyze": {
      "dependsOn": ["^build"],
      "outputs": [".next/analyze/**", "dist/analyze/**"]
    },
    "analyze:bundle": {
      "dependsOn": ["build:analyze"],
      "outputs": ["bundle-report/**"]
    },
    "bundle-size": {
      "dependsOn": ["build"],
      "outputs": ["bundle-stats.json"]
    },
    "test": {
      "dependsOn": ["^test"],
      "inputs": ["$TURBO_DEFAULT$"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "test:coverage": {
      "dependsOn": ["^test:coverage"],
      "inputs": ["$TURBO_DEFAULT$"],
      "outputs": ["coverage/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "NODE_ENV",
        "DATABASE_URL",
        "REDIS_URL",
        "FORCE_MOCK_MODE",
        "SESSION_ENVIRONMENT",
        "NEXTAUTH_URL",
        "NEXTAUTH_SECRET",
        "PORT"
      ]
    },
    "scan-styles": {
      "dependsOn": ["^build"],
      "inputs": [
        "apps/**/app/**/*.{tsx,jsx}",
        "apps/**/src/**/*.{tsx,jsx}",
        "packages/style-scanner/**"
      ],
      "outputs": ["style-docs/**"],
      "cache": false
    }
  }
}
