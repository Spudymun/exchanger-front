{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "envMode": "loose",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": [
        "VERCEL_URL",
        "PORT",
        "NODE_ENV",
        "ANALYZE",
        "DATABASE_URL",
        "REDIS_URL",
        "FORCE_MOCK_MODE",
        "SESSION_ENVIRONMENT",
        "NEXTAUTH_URL",
        "NEXTAUTH_SECRET",
        "SMTP_HOST",
        "SMTP_PORT",
        "SMTP_FROM",
        "GMAIL_SMTP_USER",
        "GMAIL_SMTP_PASS",
        "SENDGRID_API_KEY",
        "RESEND_API_KEY",
        "TELEGRAM_BOT_TOKEN",
        "TELEGRAM_WEBHOOK_URL",
        "TELEGRAM_BOT_URL",
        "WEB_APP_URL",
        "API_SECRET_KEY",
        "AUTHORIZED_TELEGRAM_OPERATORS",
        "OPERATOR_TELEGRAM_CHAT_IDS",
        "TELEGRAM_ORDERS_CHAT_ID",
        "TELEGRAM_SUPPORT_CHAT_ID",
        "TELEGRAM_NEW_ORDERS_TOPIC_ID",
        "TELEGRAM_CANCELLED_ORDERS_TOPIC_ID",
        "TELEGRAM_PAID_ORDERS_TOPIC_ID"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "env": [
        "VERCEL_URL",
        "PORT",
        "NODE_ENV",
        "ANALYZE",
        "DATABASE_URL",
        "REDIS_URL",
        "FORCE_MOCK_MODE",
        "SESSION_ENVIRONMENT",
        "NEXTAUTH_URL",
        "NEXTAUTH_SECRET",
        "SMTP_HOST",
        "SMTP_PORT",
        "SMTP_FROM",
        "GMAIL_SMTP_USER",
        "GMAIL_SMTP_PASS",
        "SENDGRID_API_KEY",
        "RESEND_API_KEY",
        "TELEGRAM_BOT_TOKEN",
        "TELEGRAM_WEBHOOK_URL",
        "TELEGRAM_BOT_URL",
        "WEB_APP_URL",
        "API_SECRET_KEY",
        "AUTHORIZED_TELEGRAM_OPERATORS",
        "OPERATOR_TELEGRAM_CHAT_IDS",
        "TELEGRAM_ORDERS_CHAT_ID",
        "TELEGRAM_SUPPORT_CHAT_ID",
        "TELEGRAM_NEW_ORDERS_TOPIC_ID",
        "TELEGRAM_CANCELLED_ORDERS_TOPIC_ID",
        "TELEGRAM_PAID_ORDERS_TOPIC_ID"
      ]
    },
    "lint:strict": {
      "dependsOn": ["^lint:strict"],
      "env": [
        "VERCEL_URL",
        "PORT",
        "NODE_ENV",
        "ANALYZE",
        "DATABASE_URL",
        "REDIS_URL",
        "FORCE_MOCK_MODE",
        "SESSION_ENVIRONMENT",
        "NEXTAUTH_URL",
        "NEXTAUTH_SECRET",
        "SMTP_HOST",
        "SMTP_PORT",
        "SMTP_FROM",
        "GMAIL_SMTP_USER",
        "GMAIL_SMTP_PASS",
        "SENDGRID_API_KEY",
        "RESEND_API_KEY",
        "TELEGRAM_BOT_TOKEN",
        "TELEGRAM_WEBHOOK_URL",
        "WEB_APP_URL",
        "API_SECRET_KEY",
        "AUTHORIZED_TELEGRAM_OPERATORS",
        "OPERATOR_TELEGRAM_CHAT_IDS",
        "TELEGRAM_ORDERS_CHAT_ID",
        "TELEGRAM_SUPPORT_CHAT_ID",
        "TELEGRAM_NEW_ORDERS_TOPIC_ID",
        "TELEGRAM_CANCELLED_ORDERS_TOPIC_ID",
        "TELEGRAM_PAID_ORDERS_TOPIC_ID"
      ]
    },
    "lint:styles": {
      "dependsOn": ["^lint:styles"]
    },
    "check-types": {
      "dependsOn": ["^check-types"],
      "env": [
        "VERCEL_URL",
        "PORT",
        "NODE_ENV",
        "ANALYZE",
        "DATABASE_URL",
        "REDIS_URL",
        "FORCE_MOCK_MODE",
        "SESSION_ENVIRONMENT",
        "NEXTAUTH_URL",
        "NEXTAUTH_SECRET",
        "SMTP_HOST",
        "SMTP_PORT",
        "SMTP_FROM",
        "GMAIL_SMTP_USER",
        "GMAIL_SMTP_PASS",
        "SENDGRID_API_KEY",
        "RESEND_API_KEY",
        "TELEGRAM_BOT_TOKEN",
        "TELEGRAM_WEBHOOK_URL",
        "TELEGRAM_BOT_URL",
        "WEB_APP_URL",
        "API_SECRET_KEY",
        "AUTHORIZED_TELEGRAM_OPERATORS",
        "OPERATOR_TELEGRAM_CHAT_IDS",
        "TELEGRAM_ORDERS_CHAT_ID",
        "TELEGRAM_SUPPORT_CHAT_ID",
        "TELEGRAM_NEW_ORDERS_TOPIC_ID",
        "TELEGRAM_CANCELLED_ORDERS_TOPIC_ID",
        "TELEGRAM_PAID_ORDERS_TOPIC_ID"
      ]
    },
    "build:clean": {
      "cache": false
    },
    "build:force": {
      "dependsOn": ["^build:force"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "build:rebuild": {
      "dependsOn": ["^build:rebuild"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "build:analyze": {
      "dependsOn": ["^build"],
      "outputs": [".next/analyze/**", "dist/analyze/**"]
    },
    "analyze:bundle": {
      "dependsOn": ["build:analyze"],
      "outputs": ["bundle-report/**"]
    },
    "bundle-size": {
      "dependsOn": ["build"],
      "outputs": ["bundle-stats.json"]
    },
    "test": {
      "dependsOn": ["^test"],
      "inputs": ["$TURBO_DEFAULT$"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "test:coverage": {
      "dependsOn": ["^test:coverage"],
      "inputs": ["$TURBO_DEFAULT$"],
      "outputs": ["coverage/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "NODE_ENV",
        "DATABASE_URL",
        "REDIS_URL",
        "FORCE_MOCK_MODE",
        "SESSION_ENVIRONMENT",
        "NEXTAUTH_URL",
        "NEXTAUTH_SECRET",
        "PORT",
        "SMTP_HOST",
        "SMTP_PORT",
        "SMTP_FROM",
        "GMAIL_SMTP_USER",
        "GMAIL_SMTP_PASS",
        "SENDGRID_API_KEY",
        "RESEND_API_KEY",
        "TELEGRAM_BOT_TOKEN",
        "TELEGRAM_WEBHOOK_URL",
        "TELEGRAM_BOT_URL",
        "WEB_APP_URL",
        "API_SECRET_KEY",
        "AUTHORIZED_TELEGRAM_OPERATORS",
        "OPERATOR_TELEGRAM_CHAT_IDS"
      ]
    },
    "scan-styles": {
      "dependsOn": ["^build"],
      "inputs": [
        "apps/**/app/**/*.{tsx,jsx}",
        "apps/**/src/**/*.{tsx,jsx}",
        "packages/style-scanner/**"
      ],
      "outputs": ["style-docs/**"],
      "cache": false
    }
  }
}
