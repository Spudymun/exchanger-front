# âœ… Environment Variables for Production Docker Setup
# This file contains production environment variable templates

# ===== DATABASE CONFIGURATION =====
# PostgreSQL Settings (CHANGE THESE IN PRODUCTION!)
POSTGRES_DB=exchanger_production
POSTGRES_USER=exchanger_prod_user
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_PASSWORD_123

# Database URL for Prisma
DATABASE_URL="postgresql://exchanger_prod_user:CHANGE_THIS_SECURE_PASSWORD_123@postgres:5432/exchanger_production?schema=public&sslmode=require"

# ===== REDIS CONFIGURATION =====
# Redis Settings
REDIS_URL="redis://redis:6379"
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD_123

# Redis Database Allocation
REDIS_SESSION_DB=1
REDIS_CACHE_DB=0
REDIS_RATELIMIT_DB=2

# ===== SESSION MANAGEMENT =====
# Session Environment
SESSION_ENVIRONMENT=production

# Session Configuration
SESSION_MAX_AGE_SECONDS=3600
SESSION_REDIS_PREFIX="exchanger:session:"
SESSION_REDIS_TTL=3600

# ===== APPLICATION SETTINGS =====
# Next.js
NODE_ENV=production
NEXTAUTH_URL=https://yourdomain.com
NEXTAUTH_SECRET=CHANGE_THIS_NEXTAUTH_SECRET_IN_PRODUCTION

# ===== LOGGING & MONITORING =====
# Log Levels
LOG_LEVEL=warn

# ===== SECURITY (Production) =====
# JWT Secrets (CHANGE THESE!)
JWT_SECRET=CHANGE_THIS_JWT_SECRET_IN_PRODUCTION_WITH_STRONG_KEY
JWT_EXPIRES_IN=1h

# CORS Settings
CORS_ORIGIN=https://yourdomain.com

# ===== PRODUCTION FLAGS =====
# Disable development features
DEV_MODE=false
DEBUG_SESSION=false
DEBUG_SQL=false

# ===== EXTERNAL SERVICES =====
# Email (production SMTP)
SMTP_HOST=smtp.yourmailservice.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=noreply@yourdomain.com

# ===== RATE LIMITING =====
# Rate limit settings for production
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=20

# ===== MONITORING & HEALTH CHECKS =====
# Health check endpoints
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true

# ===== BACKUP & MAINTENANCE =====
# Database backup settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30

# Session cleanup schedule
SESSION_CLEANUP_SCHEDULE="0 1 * * *"
