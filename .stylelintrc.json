{
    "extends": [
        "stylelint-config-standard",
        "stylelint-config-tailwindcss"
    ],
    "rules": {
        "at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": [
                    "tailwind",
                    "apply",
                    "layer",
                    "variants",
                    "responsive",
                    "screen",
                    "config"
                ]
            }
        ],
        "at-rule-no-deprecated": null,
        "no-descending-specificity": null
    },
    "ignoreFiles": [
        "**/node_modules/**",
        "**/dist/**",
        "**/.next/**",
        "**/coverage/**"
    ]
}