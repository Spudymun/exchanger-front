{
    "extends": "../../packages/typescript-config/nextjs.json",
    "compilerOptions": {
        "plugins": [
            {
                "name": "next"
            }
        ],
        "baseUrl": ".",
        "paths": {
            "@repo/constants": [
                "../../packages/constants/dist"
            ],
            "@repo/constants/*": [
                "../../packages/constants/dist/*"
            ]
        }
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "next-env.d.ts",
        "next.config.js",
        ".next/types/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}