{
  "extends": "../../packages/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@repo/constants": ["../../packages/constants/src"],
      "@repo/constants/*": ["../../packages/constants/src/*"],
      "@repo/utils": ["../../packages/utils/src"],
      "@repo/utils/*": ["../../packages/utils/src/*"],
      "@repo/session-management": ["../../packages/session-management/src"],
      "@repo/session-management/*": ["../../packages/session-management/src/*"],
      "@repo/exchange-core": ["../../packages/exchange-core/src"],
      "@repo/exchange-core/*": ["../../packages/exchange-core/src/*"],
      "@repo/api-contract": ["../../packages/api-contract/src"],
      "@repo/api-contract/*": ["../../packages/api-contract/src/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "next-env.d.ts", "next.config.js", ".next/types/**/*.ts"],
  "exclude": ["node_modules", ".next/types/**/*.ts"]
}
