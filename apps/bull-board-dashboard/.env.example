# ===== REDIS CONFIGURATION =====
# Redis connection URL
# Development: localhost, Production: Docker service name
REDIS_URL=redis://localhost:6379

# Redis database index для BullMQ очереди
# 0 = default (sessions, cache, rate limiting)
# 1 = BullMQ Queue (telegram notifications) ✅ ВЫБРАНА
# 2-15 = Reserved
REDIS_DB_QUEUE=1

# ===== SERVER CONFIGURATION =====
# HTTP server port
PORT=3010

# Environment
NODE_ENV=development

# ===== PRODUCTION OVERRIDES =====
# Uncomment для production deployment
# REDIS_URL=redis://redis:6379
# NODE_ENV=production
