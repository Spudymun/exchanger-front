{
  "name": "web",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "next dev --port 3000",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "analyze:bundle": "npx @next/bundle-analyzer",
    "bundle-size": "node ../../scripts/bundle-analyzer.js",
    "start": "next start",
    "lint": "next lint --max-warnings 0",
    "lint:strict": "next lint --max-warnings 0",
    "lint:styles": "stylelint \"app/**/*.{css,scss}\" --fix",
    "check-types": "tsc --noEmit",
    "db:reset": "npx prisma db execute --file ../../packages/session-management/scripts/reset/web-reset.sql --schema=../../packages/session-management/prisma/schema.prisma",
    "db:reset:shared": "npx prisma db execute --file ../../packages/session-management/scripts/reset/shared-reset.sql --schema=../../packages/session-management/prisma/schema.prisma",
    "db:studio": "npx prisma studio --schema=../../packages/session-management/prisma/schema.prisma",
    "db:migrate": "npx prisma migrate dev --schema=../../packages/session-management/prisma/schema.prisma"
  },
  "dependencies": {
    "@next/env": "^15.5.2",
    "@repo/constants": "*",
    "@repo/exchange-core": "*",
    "@repo/hooks": "*",
    "@repo/providers": "*",
    "@repo/session-management": "*",
    "@repo/ui": "*",
    "@tanstack/react-query": "^5.81.5",
    "@trpc/client": "^11.4.3",
    "@trpc/next": "^11.4.3",
    "@trpc/react-query": "^11.4.3",
    "@trpc/server": "^11.4.3",
    "bcryptjs": "^2.4.3",
    "next": "^15.3.0",
    "next-intl": "^4.3.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hot-toast": "^2.4.1",
    "superjson": "^2.2.1",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.25.67",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^15.3.0",
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "^0.0.0",
    "@tanstack/react-query-devtools": "^5.81.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^22.15.3",
    "@types/react": "19.1.0",
    "@types/react-dom": "19.1.1",
    "eslint": "^9.29.0",
    "typescript": "5.8.2"
  }
}
