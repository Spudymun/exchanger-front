{
    "*.{js,jsx,ts,tsx}": [
        "eslint --fix --max-warnings 0",
        "prettier --write"
    ],
    "*.{css,scss}": [
        "stylelint --fix",
        "prettier --write"
    ],
    "*.{json,md}": [
        "prettier --write"
    ],
    "packages/constants/src/**/*.{ts,tsx}": [
        "cd packages/constants && npm run build"
    ]
}