{
  "name": "exchanger-monorepo",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:clean": "turbo run build:clean",
    "build:force": "turbo run build:force",
    "build:rebuild": "turbo run build:rebuild",
    "build:analyze": "turbo run build:analyze",
    "analyze:bundle": "turbo run analyze:bundle",
    "bundle-size": "turbo run bundle-size",
    "dev": "turbo run dev",
    "lint": "eslint \"**/*.{js,jsx,ts,tsx}\" --fix",
    "lint:check": "eslint \"**/*.{js,jsx,ts,tsx}\"",
    "lint:styles": "stylelint \"**/*.{css,scss}\" --fix",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "format:styles": "stylelint \"**/*.{css,scss}\" --fix",
    "check-types": "turbo run check-types",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:coverage": "turbo run test:coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "scan-styles": "turbo run scan-styles",
    "scan-styles:verbose": "node packages/style-scanner/bin/style-scanner.js scan --out style-docs --verbose",
    "scan-styles:quick": "node packages/style-scanner/bin/style-scanner.js scan --out style-docs",
    "scan-styles:dry": "node packages/style-scanner/bin/style-scanner.js scan --dry-run --verbose",
    "lint:benchmark": "node packages/eslint-config/performance-benchmark.js",
    "prepare": "husky",
    "db:reset:web": "dotenv -e apps/web/.env -- npx prisma db execute --file packages/session-management/scripts/reset/web-reset.sql --schema packages/session-management/prisma/schema.prisma",
    "db:reset:admin": "dotenv -e apps/web/.env -- npx prisma db execute --file packages/session-management/scripts/reset/admin-reset.sql --schema packages/session-management/prisma/schema.prisma",
    "db:reset:all": "dotenv -e apps/web/.env -- npx prisma db execute --file packages/session-management/scripts/reset/full-reset.sql --schema packages/session-management/prisma/schema.prisma",
    "db:studio": "dotenv -e apps/web/.env -- npx prisma studio --schema packages/session-management/prisma/schema.prisma",
    "db:generate": "dotenv -e apps/web/.env -- npx prisma generate --schema packages/session-management/prisma/schema.prisma",
    "db:push": "dotenv -e apps/web/.env -- npx prisma db push --schema packages/session-management/prisma/schema.prisma",
    "db:migrate": "dotenv -e apps/web/.env -- npx prisma migrate dev --schema packages/session-management/prisma/schema.prisma"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.0.1",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@playwright/test": "^1.53.1",
    "@storybook/addon-a11y": "^9.0.14",
    "@storybook/addon-backgrounds": "^9.0.8",
    "@storybook/addon-controls": "^9.0.8",
    "@storybook/addon-docs": "^9.0.14",
    "@storybook/addon-toolbars": "^9.0.8",
    "@storybook/addon-viewport": "^9.0.8",
    "@storybook/addon-vitest": "^9.0.14",
    "@storybook/nextjs-vite": "^9.0.14",
    "@tailwindcss/nesting": "^0.0.0-insiders.565cd3e",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsonc": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-n": "^17.20.0",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.4",
    "eslint-plugin-storybook": "^9.0.14",
    "eslint-plugin-unicorn": "^59.0.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "^9.1.7",
    "jest": "^30.0.3",
    "jest-environment-jsdom": "^30.0.2",
    "jsonc-eslint-parser": "^2.4.0",
    "lint-staged": "^16.1.2",
    "playwright": "^1.53.1",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.6.0",
    "prisma": "^6.15.0",
    "storybook": "^9.0.14",
    "stylelint": "^16.21.0",
    "stylelint-config-standard": "^38.0.0",
    "stylelint-config-tailwindcss": "^1.0.0",
    "stylelint-order": "^7.0.0",
    "turbo": "^2.5.4",
    "typescript": "5.8.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.9.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@prisma/client": "^6.15.0",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@tanstack/react-query": "^5.81.5",
    "@trpc/client": "^11.4.3",
    "@trpc/next": "^11.4.3",
    "@trpc/react-query": "^11.4.3",
    "@trpc/server": "^11.4.3",
    "autoprefixer": "^10.4.21",
    "ioredis": "^5.7.0",
    "next-intl": "^4.3.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.16",
    "zod": "^3.25.67",
    "zustand": "^5.0.6"
  }
}
