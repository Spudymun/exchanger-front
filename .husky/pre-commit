echo "ğŸ” Running pre-commit checks..."

# Run lint-staged for file-specific checks (fail on errors, but no auto-revert)
echo "ğŸ“ Checking staged files..."
npx lint-staged --no-stash
LINT_EXIT_CODE=$?

if [ $LINT_EXIT_CODE -ne 0 ]; then
  echo "âŒ Lint-staged failed with errors above"
  echo "ğŸ’¡ Files remain staged - fix errors and commit again"
  exit 1
fi

# Type checking for the entire project (continue on failure)
echo "ğŸ”§ Checking TypeScript..."
npm run check-types || echo "âš ï¸ TypeScript check failed, but continuing..."

# Run tests to ensure nothing is broken (continue on failure)
echo "ğŸ§ª Running tests..."
npm run test || echo "âš ï¸ Tests failed, but continuing..."

echo "âœ… Pre-commit checks completed (some may have failed)"

# Task checklist reminder (at the end)
echo "ğŸ“‹ Final checklist reminder..."
node "./scripts/checklist-reminder.mjs"
if [ $? -ne 0 ]; then
  echo "âŒ Commit cancelled by user."
  exit 1
fi